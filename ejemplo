; Definicion de Expresion Booleana á¹”robabilista
(declare-datatypes () ((ProbBool (pb (p Real)))))
(define-fun falseVal ((c ProbBool)) ProbBool
  c )

(define-fun isEmpty ((x ProbBool)) ProbBool (
  match x (
    ((pb p) (pb (+ 4 p)))
  )
))

(simplify (isEmpty (pb 1)))

(rarit (r Arit))  

